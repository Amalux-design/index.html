    <script>
    const hamburger = document.getElementById('hamburger');
    const closeX = document.getElementById('close-x');
    const sidebar = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebar-overlay');
    const sidebarLinks = document.querySelectorAll('.sidebar-link');
    const header = document.getElementById('header');
    const lines = document.querySelectorAll('.hamburger-line');

    function openSidebar() {
      sidebarOverlay.classList.remove('opacity-0', 'invisible');
      sidebar.classList.add('sidebar-enter-active');
      sidebar.classList.remove('sidebar-enter');
      hamburger.classList.add('hamburger-open');
      // keep header transparent â†’ remove background color change
      header.style.backgroundColor = 'transparent';
    }

    function closeSidebarMenu() {
      sidebarOverlay.classList.add('opacity-0', 'invisible');
      sidebar.classList.remove('sidebar-enter-active');
      sidebar.classList.add('sidebar-enter');
      hamburger.classList.remove('hamburger-open');
      // keep header transparent â†’ remove background color change
      header.style.backgroundColor = 'transparent';
    }

    hamburger.addEventListener('click', () => {
      if (hamburger.classList.contains('hamburger-open')) {
        closeSidebarMenu();
      } else { 
        openSidebar(); 
      }
    });

    closeX.addEventListener('click', closeSidebarMenu);
    sidebarOverlay.addEventListener('click', (e) => { 
      if (e.target === sidebarOverlay) closeSidebarMenu(); 
    });
    sidebarLinks.forEach(link => { 
      link.addEventListener('click', closeSidebarMenu); 
    });
</script>

    
    
    // Add some dynamic loading effect
        window.addEventListener('load', function() {
            const items = document.querySelectorAll('.masonry-item');
            items.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    item.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    
    </script>
